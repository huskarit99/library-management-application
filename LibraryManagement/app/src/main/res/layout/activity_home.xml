<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity"
    android:background="@color/background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_home">
        <include
            android:id="@+id/toolbarHome"
            layout="@layout/toolbar"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@null"
        android:layout_below="@id/frame_home">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="40dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/searhBook"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/btn_menu"
                                android:src="@drawable/ic_search_book"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/search_book"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:clickable="true">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:id="@+id/infoUser"
                                android:src="@drawable/ic_person"
                                android:clickable="false"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/info_user"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:id="@+id/BorrowedBook"
                                android:src="@drawable/ic_borrowed_book"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/borrowed_book"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnLogout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:clickable="true">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:src="@drawable/ic_log_out"
                                android:clickable="false"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/log_out"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewLibrarian"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="40dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:src="@drawable/ic_book_manager"
                                android:id="@+id/bookManager"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/book_manager"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:id="@+id/readerManager"
                                android:src="@drawable/ic_reader_manager"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reader_manager"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:src="@drawable/ic_borrow_bill"
                                android:id="@+id/borrowedBill"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/borrowed_bill"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/statistic"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/btn_menu"
                                android:src="@drawable/ic_statistic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/statistic"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAdmin"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="40dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:id="@+id/librarianManager"
                                android:src="@drawable/ic_librarian_manager"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/librarian_manager"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/btn_menu"
                                android:id="@+id/rule"
                                android:src="@drawable/ic_change_rule"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rule"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>







</RelativeLayout>